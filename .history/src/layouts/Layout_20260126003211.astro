---
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="vi">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio Retouching & Design" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#f4f4f5] text-[#18181b] min-h-screen flex flex-col">
		<Header client:load />
		
		<main class="flex-1 w-full max-w-6xl mx-auto px-4 pt-[80px] pb-[100px]">
			<slot />
		</main>

		<Footer client:visible />
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
	}
</style>